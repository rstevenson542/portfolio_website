<div class="form">
<%= form_for(@contacts) do |f| %>
  
  <div class="name">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="email">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="password">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>