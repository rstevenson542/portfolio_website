<div class="form">
<%= form_for(@portfolio) do |f| %>
  
  <div class="name">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="email">
    <%= f.label :context %><br />
    <%= f.text_field :context %>
  </div>
  <div class="password">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>