<div class="form">
<%= form_for(@blog) do |f| %>
  
  <div class="name">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="email">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="password">
    <%= f.label :post %><br />
    <%= f.text_area :post %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>